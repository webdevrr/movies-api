{
  "name": "nest-clean-architecture",
  "version": "0.0.1",
  "description": "Nest.js with clean architecture",
  "author": "Robert Ryszka",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.12.0",
    "npm": ">=10.5.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "rimraf dist",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json",
    "test:e2e:watch": "jest --config ./jest-e2e.json --watch",
    "test:e2e:cov": "jest --config ./jest-e2e.json --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "10.3.7",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "10.3.7",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "10.3.7",
    "@nestjs/swagger": "^7.3.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "5.0.5",
    "rxjs": "7.8.1",
    "winston": "^3.13.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@nestjs/cli": "10.3.2",
    "@nestjs/schematics": "10.1.1",
    "@nestjs/testing": "10.3.7",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "20.12.4",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "pretty-quick": "4.0.0",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "testcontainers": "^10.8.1",
    "ts-jest": "29.1.2",
    "ts-loader": "9.5.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.4.3",
    "webpack": "5.91.0"
  },
  "lint-staged": {
    "*.ts": "npm run lint"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "src/apps/**/*.ts",
      "src/core/**/*.ts",
      "src/frameworks/**/*.ts",
      "src/common/**/*.ts",
      "src/utils/**/*.ts",
      "!src/apps/example/**/*.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@/__tests__(.*)$": "<rootDir>/src/__tests__$1",
      "^@/core(.*)$": "<rootDir>/src/core/$1",
      "^@/apps(.*)$": "<rootDir>/src/apps/$1",
      "^@/common(.*)$": "<rootDir>/src/common/$1",
      "^@/frameworks(.*)$": "<rootDir>/src/frameworks/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
